<Window x:Class="Kinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2014"

        xmlns:local="GameInfo.cs"
        Title="MainWindow" WindowStyle="SingleBorderWindow" >
    <Window.Background>
        <ImageBrush ImageSource="background2.jpg" />
    </Window.Background>
    <k:KinectRegion Name="KinectRegion" Margin="0,0,356,0">
        <Grid x:Name="FullGrid" Margin="0,0,60,0">
            <ScrollViewer>
                <Grid x:Name="MainGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                </Grid>
            </ScrollViewer>
            <TextBlock  Name="SelectedTitle" TextAlignment="Center" HorizontalAlignment="Right" Height="206" Margin="0,0,-398,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="393" Foreground="White" FontFamily="Courier New" FontWeight="Bold"/>
            <TextBlock Name="SelectedDescription" TextAlignment="Center" HorizontalAlignment="Right" Margin="409,290,-398,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="393" Height="214" Foreground="White" FontFamily="Courier New" FontWeight="Bold"/>


        </Grid>


    </k:KinectRegion>
</Window>
